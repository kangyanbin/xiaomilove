<view class="user">
  <view class="header">
    <image src="{{avatarUrl}}"></image>
    <text>{{nickName}}</text>
  </view>
  <view class="content">
    <view class="item" bindtap="toOrderList"><text class="iconfont icon-dingdan icon"></text><text>我的订单</text></view>
    <view class="item" bindtap="toMembers"><text class="iconfont icon-huiyuan icon"></text><text>会员中心</text></view>
    <view class="item" bindtap="toCouPon"><text class="iconfont icon-youhuijuan icon"></text><text>优惠卷</text></view>
  </view>
  <view class="footer">
    <button class="item kefu" open-type="contact"><text class="iconfont icon-kefu icon"></text>在线客服</button>
    <view class="item" bindtap="toSet"><text class="iconfont icon-shezhi icon"></text><text>设置</text></view>
  </view>
