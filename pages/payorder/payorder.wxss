@import "/style/iconfont";
.right:before {
  content: "\e603";
}
.icon{
  font-size: 40rpx;
}
.container{
  margin-bottom: 100rpx;
}
.container .content{
  width: 100vw;
  border-top: 10rpx solid #ddd;
  box-sizing: border-box;
  background-color: #fff;
}

.container .content .item{
  overflow: hidden;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding:0 20rpx;
  border-bottom: 2rpx solid #ddd;
  width: 100%;
  height: 100rpx;
}

.content .msg{
  display: flex;
  justify-content: space-between;
}
.content .money{
  font-size: 28rpx;
  margin-right: 6rpx;
  color: rgb(126, 126, 126);
}
.addres{
  width: 85vw;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.content .prompt{
  color: rgb(126, 126, 126);
}
.content .price{
  color: #f40;
}
.content .pic{
  display: block;
  width: 80rpx;
}
.content .left{
  display: flex;
  align-items: center;
}
.pay{
  width: 100vw;
  color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  background: green;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx
}