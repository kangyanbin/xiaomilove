.container{
  height: 100vh;
  background: #ddd;
}
.container .nav-bar{
  width:100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}
.container .nav-bar .nav-item{
    width: 50%;
    height: 100%;
    text-align: center;
    font-size:28rpx;
    color:#353535;
    box-sizing: border-box;
    position: relative;
}
.container .nav-bar .nav-item.active{
    color:#e64340;
    border-bottom: 6rpx solid #e64340;
}
.container .content{
  width: 90vw;
  overflow: hidden;
  margin: 20rpx auto;
}
.container .content .box{
  width: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
}
.container .content .box .left{
  width: 30%;
  overflow: hidden;
}
.container .content .box .left image{
  display: block;
  width: 100%;
}

.container .content .box .left .money{
  position: absolute;
  color: #fff;
  font-size: 40rpx;
  left: 110rpx;
  top: 50%;
  transform: translate(-50%,-50%);
}
.container .content .box .right{
  width: 70%;
  position: relative;
  overflow: hidden;
  background: #FE756A;
  box-sizing: border-box;
  padding: 16rpx;
}
.container .content .box .topdot{
  position: absolute;
  left: 30%;
  top: 0;
  z-index: 1000;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #fff;
  transform: translate(-50%,-50%);
}
.container .content .box .bottomdot{
  position: absolute;
  left: 30%;
  bottom: 0;
  z-index: 1000;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #fff;
  transform: translate(-50%,50%);
}
.container .content .box .line{
  position: absolute;
  left: 30%;
  top: 0;
  transform: translate(-50%,0);
  height: 100%;
  width: 0;
  border: 2rpx dotted #fff;
}
.container .content .box .right.no{
  background: rgb(95, 95, 95);
}
.container .content .box .right .box-title{
  color: #fff;
  margin-bottom: 16rpx;
}
.container .content .box .right .box-date{
  color: #FDC0BC;
  font-size: 26rpx;
}
.container .content .box .right .tobuy{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 26rpx;
  padding: 6rpx 14rpx;
  border-radius: 10rpx;
  color: #FDC0BC;
  border: 2rpx solid #fff;
}
.container .content .dec{
  font-size: 26rpx;
  background: #fff;
  line-height: 1.5;
  color: rgb(131, 129, 129);
  border: 2rpx solid #FE756A;
  border-top-color: transparent;
}
.container .content .dec.no{
  border-color: rgb(95, 95, 95);
  border-top-color: transparent;
}