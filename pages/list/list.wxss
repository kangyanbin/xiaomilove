@import "/style/iconfont";
.icon-search:before {
  content: "\e653";
}
.list{
  width: 100vw;
  height: 100vh;
  background-color:rgb(241, 236, 236);
}
.list .nav{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  line-height: 80rpx;
}
.list .nav .item{
  flex: 1;
  text-align: center;
}
.list .item-box{
  background: #fff;
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #ddd;
}
.list .item-box image{
  width: 260rpx;
  height: 260rpx;
}
.list .item-box .item-con{
  margin-left: 30rpx;
  width: 420rpx;
}
.list .item-box .item-con .title{
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list .item-box .item-con .item-desc{
  margin-top: 6rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list .item-box .item-con .item-desc .red{
  color: #ff6700;
}
.list .item-box .item-con .item-price{
  margin-top: 16rpx;
  font-size: 36rpx;
  color: #ff6700;
}
.list .item-box .item-con .item-price .spe{
  font-size: 24rpx;
}
.list .item-box .item-con .item-count{
  margin-top: 16rpx;
  color: rgba(0,0,0,.54);
  font-size: 24rpx;
}
.icon{
  width: 0;
  height: 0;
  display: inline-block;
  border-style: solid;
  margin-left: 10rpx;
  vertical-align: middle;
}
.icon-down{
  border-width: 8rpx 8rpx  0;
  border-color: #bdbdbd transparent transparent;
}
.icon-up{
  border-width: 0 8rpx 8rpx;
  border-color:  transparent transparent #bdbdbd;
}
.active{
  color: #ff6700;
}
.active .lower,
.active .promotion{
  border-color: #ff6700 transparent transparent;
}
.active .high{
  border-color: transparent transparent #ff6700;
}
.sp{
  display: inline-block;
  width: 0;
  height: 0;
  position: relative;
}
.sp .icon{
  position: absolute;
  left: 0;
}
.sp .icon-up{
  top: -20rpx;
}
.sp .icon-down{
  top: -10rpx;
}
.goods_search .search{
  font-size: 100rpx;
}
.goods_search .i{
  background: rgb(201, 200, 200);
  color: #fff;
  width: 25vw;
  height: 25vw;
  display: flex;
  justify-content: center;
  margin: 40rpx auto 20rpx;
  align-items: center;
  border-radius: 50%;
}
.goods_search .tip{
  color: rgb(148, 148, 148);
  font-size: 28rpx;
  text-align: center;
}