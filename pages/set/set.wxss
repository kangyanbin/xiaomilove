.container{
  width: 100vw;
  padding-top: 20rpx;
  height: 100vh;
  background: #ddd;
}
.container .content{
  width: 100vw;
  box-sizing: border-box;
  background-color: #fff;
}
.container .content view{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding:0 20rpx;
  border-bottom: 2rpx solid #ddd;
  width: 100%;
  height: 80rpx;
}
.container .content view:last-child{
  border-bottom-color: #fff;
}